{
  "get": {
    "summary": "Get guest reservations using reservation token",
    "tags": [
      "Reservations"
    ],
    "parameters": [
      {
        "name": "token",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Guest's reservations",
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "../components/schemas/reservation_details_response.json"
              }
            }
          }
        }
      },
      "404": {
        "description": "No reservations found for the token",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/error.json"
            }
          }
        }
      }
    }
  }
}