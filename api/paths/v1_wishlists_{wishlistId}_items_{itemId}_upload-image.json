{
  "post": {
    "summary": "Upload an image for a gift item",
    "tags": [
      "GiftItems"
    ],
    "security": [
      {
        "BearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "wishlistId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      },
      {
        "name": "itemId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "requestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "image": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Image uploaded successfully",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "image_url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        }
      },
      "400": {
        "$ref": "../components/responses/BadRequest.json"
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "404": {
        "description": "Gift item or wish list not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/error.json"
            }
          }
        }
      }
    }
  }
}