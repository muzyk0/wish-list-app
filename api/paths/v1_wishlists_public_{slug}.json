{
  "get": {
    "summary": "Get a public wish list by slug",
    "tags": [
      "WishLists"
    ],
    "parameters": [
      {
        "name": "slug",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Public wish list details",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/public_wish_list_response.json"
            }
          }
        }
      },
      "404": {
        "description": "Wish list not found or not public",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/error.json"
            }
          }
        }
      }
    }
  }
}