{
  "get": {
    "summary": "Get a specific gift item",
    "tags": [
      "GiftItems"
    ],
    "security": [
      {
        "BearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "wishlistId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      },
      {
        "name": "itemId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Gift item details",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/gift_item_response.json"
            }
          }
        }
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "404": {
        "description": "Gift item or wish list not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/error.json"
            }
          }
        }
      }
    }
  },
  "put": {
    "summary": "Update a gift item",
    "tags": [
      "GiftItems"
    ],
    "security": [
      {
        "BearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "wishlistId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      },
      {
        "name": "itemId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../components/schemas/gift_item_update.json"
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Gift item updated successfully",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/gift_item_response.json"
            }
          }
        }
      },
      "400": {
        "$ref": "../components/responses/BadRequest.json"
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "404": {
        "description": "Gift item or wish list not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/error.json"
            }
          }
        }
      }
    }
  },
  "delete": {
    "summary": "Delete a gift item",
    "tags": [
      "GiftItems"
    ],
    "security": [
      {
        "BearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "wishlistId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      },
      {
        "name": "itemId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string",
          "format": "uuid"
        }
      }
    ],
    "responses": {
      "204": {
        "description": "Gift item deleted successfully"
      },
      "401": {
        "$ref": "../components/responses/Unauthorized.json"
      },
      "404": {
        "description": "Gift item or wish list not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/error.json"
            }
          }
        }
      }
    }
  }
}