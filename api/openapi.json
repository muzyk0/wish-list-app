{
  "openapi": "3.0.3",
  "info": {
    "title": "Wish List Application API",
    "description": "Complete API for the Wish List application including user authentication, wish list management, gift items, and reservations. The API includes caching for public endpoints (15-minute TTL) and rate limiting (100 requests/minute per IP).",
    "version": "1.1.0",
    "contact": {
      "name": "API Support",
      "email": "support@wishlistapp.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development server"
    },
    {
      "url": "https://api.wishlistapp.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Users",
      "description": "User authentication and profile management"
    },
    {
      "name": "WishLists",
      "description": "Wish list creation and management"
    },
    {
      "name": "GiftItems",
      "description": "Gift item management within wish lists"
    },
    {
      "name": "Reservations",
      "description": "Gift item reservation management"
    }
  ],
  "paths": {
    "/v1/users/register": {
      "$ref": "paths/v1_users_register.json"
    },
    "/v1/users/login": {
      "$ref": "paths/v1_users_login.json"
    },
    "/v1/users/me": {
      "$ref": "paths/v1_users_me.json"
    },
    "/v1/users/magic-link": {
      "$ref": "paths/v1_users_magic-link.json"
    },
    "/v1/users/verify-magic-link": {
      "$ref": "paths/v1_users_verify-magic-link.json"
    },
    "/v1/wishlists": {
      "$ref": "paths/v1_wishlists.json"
    },
    "/v1/wishlists/{id}": {
      "$ref": "paths/v1_wishlists_{id}.json"
    },
    "/v1/wishlists/public/{slug}": {
      "$ref": "paths/v1_wishlists_public_{slug}.json"
    },
    "/v1/wishlists/{id}/publish": {
      "$ref": "paths/v1_wishlists_{id}_publish.json"
    },
    "/v1/wishlists/{id}/share": {
      "$ref": "paths/v1_wishlists_{id}_share.json"
    },
    "/v1/wishlists/{wishlistId}/items": {
      "$ref": "paths/v1_wishlists_{wishlistId}_items.json"
    },
    "/v1/wishlists/{wishlistId}/items/{itemId}": {
      "$ref": "paths/v1_wishlists_{wishlistId}_items_{itemId}.json"
    },
    "/v1/wishlists/{wishlistId}/items/{itemId}/upload-image": {
      "$ref": "paths/v1_wishlists_{wishlistId}_items_{itemId}_upload-image.json"
    },
    "/v1/wishlists/{wishlistId}/items/{itemId}/mark-purchased": {
      "$ref": "paths/v1_wishlists_{wishlistId}_items_{itemId}_mark-purchased.json"
    },
    "/v1/public/wishlists/{slug}/items/{itemId}": {
      "$ref": "paths/v1_public_wishlists_{slug}_items_{itemId}.json"
    },
    "/v1/wishlists/{wishlistId}/items/{itemId}/reserve": {
      "$ref": "paths/v1_wishlists_{wishlistId}_items_{itemId}_reserve.json"
    },
    "/v1/wishlists/{wishlistId}/items/{itemId}/cancel-reservation": {
      "$ref": "paths/v1_wishlists_{wishlistId}_items_{itemId}_cancel-reservation.json"
    },
    "/v1/users/me/reservations": {
      "$ref": "paths/v1_users_me_reservations.json"
    },
    "/v1/guest/reservations": {
      "$ref": "paths/v1_guest_reservations.json"
    },
    "/v1/public/wishlists/{slug}/items/{itemId}/reservation-status": {
      "$ref": "paths/v1_public_wishlists_{slug}_items_{itemId}_reservation-status.json"
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}
